<%= form_for(@sponsored) do |f| %>
  <% if @sponsored.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sponsored.errors.count, "error") %> prohibited this sponsored from being saved:</h2>

      <ul>
      <% @sponsored.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :immage %><br />
    <%= f.file_field :immage %>
  </div>
  <div class="field">
    <%= f.label :pre_im %><br />
    <%= f.text_area :pre_im %>
  </div>




<br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
